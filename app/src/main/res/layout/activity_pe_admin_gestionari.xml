<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pe_admin_gestionari">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSecondary"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="@string/Admin_ai1"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/constraintLayout3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintVertical_bias="1.0">


                <TableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/bordes"
                    android:gravity="center"
                    android:stretchColumns="0,1,2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.195"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    app:layout_constraintVertical_bias="1.0">


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bordes"
                        android:padding="5dp"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/Admin_gi2"

                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/Admin_gi3"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="11dp"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/Admin_gi4"

                            android:textColor="@color/black" />

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bordes"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/Inventario_1"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/Admin_gi2"
                            android:textColor="@color/black" />


                        <ImageButton
                            android:id="@+id/Inventario_2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:autofillHints=""
                            android:background="@color/white"
                            android:hint="@string/Admin_ai4c"
                            android:inputType="textPassword"
                            android:src="@drawable/icono_ingredientes"
                            android:textColor="@color/black"
                            android:textColorHint="#60443B"
                            />

                        <TextView
                            android:id="@+id/Inventario_3"
                            android:layout_width="11dp"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/Admin_gi4"

                            android:textColor="@color/black" />

                    </TableRow>

                </TableLayout>

            </HorizontalScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>